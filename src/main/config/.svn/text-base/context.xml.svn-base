    <bean id="renderer" class="com.ss.mailshot.FreemarkerRenderer"/>

    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="mail.oaukintranet.org"/>
        <property name="username" value="oaukdirectory_help@oaukintranet.org"/>
        <property name="password" value="bww7i3f9"/>
